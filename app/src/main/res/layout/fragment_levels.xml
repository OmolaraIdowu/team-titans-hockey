<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LevelsFragment">


    <View
        android:layout_width="199dp"
        android:layout_height="199dp"
        android:background="@drawable/ellipse_48"
        android:backgroundTint="#D0000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="195dp"
        android:layout_height="188dp"
        android:background="@drawable/ellipse_48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/txxt"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:layout_marginTop="30dp"
                app:lottie_rawRes="@raw/animationnn"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <Button
                android:id="@+id/easybtn"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/press_start_2p"
                android:text="EASY"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:theme="@style/btnEasy"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txxt"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/normBtn"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/press_start_2p"
                android:text="NORMAL"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:theme="@style/btnNormal"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/easybtn"
                app:strokeWidth="2dp"/>

            <Button
                android:id="@+id/hardBtn"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/press_start_2p"
                android:text="HARD"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:theme="@style/btnHard"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/normBtn"
                app:strokeWidth="2dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <View
        android:id="@+id/view"
        android:layout_width="205dp"
        android:layout_height="210dp"
        android:background="@drawable/ellipse_49"
        android:backgroundTint="#D8000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/ellipse_49"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>






